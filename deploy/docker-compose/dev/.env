POSTGRES_PASSWORD=admin # Database password.
POSTGRES_DB=logicle # Database name.
DATABASE_URL=postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@postgres-db:5432/$POSTGRES_DB # URL for database connection.